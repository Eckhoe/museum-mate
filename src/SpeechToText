const client = {
    //all methods
    callMethod: async (name, ...args) => {
        if (window.clientIm && window.clientIm[name]) {
            return window.clientIm[name](...args)
        }
    },
    //microphone button
    sttConfig: async (...args) => {
        return client.callMethod('sttConfig', ...args)
    },
    sttListen: async (...args) => {
        return client.callMethod('sttListen', ...args)
    },
    sttStop: async (...args) => {
        return client.callMethod('sttStop', ...args)
    },
    sttEnd: async (...args) => {
        return client.callMethod('sttEnd', ...args)
    },
    //called for media recording only if true
    sttFinalAudio: async (...args) => {
        return client.callMethod('sttFinalAudio', ...args)
    },
    sttInterimAudio: async (...args) => {
        return client.callMethod('sttInterimAudio', ...args)
    }
}

window.sapcai = {
    client,
}